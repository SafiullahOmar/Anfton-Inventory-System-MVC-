    </script>
    <script type="text/javascript">

        function editOrDelete() {
            $(document.body).on('click', 'tr', function (e) {
                e.preventDefault();
                var data = $('#tblCategory').DataTable().row(this).data();
                console.log(e.target);
                if (e.target.className == 'btn btn-info edit') {
                    alert('edit');
                    $('html,body').animate({ scrollTop: 0 }, 1200);
                    $('#txtName').val(data.Name);
                    $('#txthidden').val(data.Id);


                    if (data.active == 1) {
                        $('#closeButton').prop('checked', true);

                    } else {
                        $('#closeButton').prop('checked', true);
                    }
                } else if (e.target.className == 'btn btn-info delete text-danger') {
                    if (confirm("are you sure to delete ?")) {

                        $('#txthidden').val(data.Id);
                        var RequestCls = {
                            Id: $('#txthidden').val()

                        }
                        var URLApi = '@Url.Content("~")' + "Master/RemoveCategory";
                        $.ajax({
                            url: URLApi,
                            type: 'POST',
                            data: JSON.stringify(RequestCls),
                            contentType: 'application/json;charset=utf-8',
                            cache: false,
                            success: function (data) {
                                //$('#dtTableDetail').html('');                                
                                showCategory(1);
                                alert(data.message);
                              
                                $('#categoryform')[0].reset();
                                
                            },
                            error: function (data) {
                                alert(data.messages);
                            }

                        });
                    }
                }


            });
        }
