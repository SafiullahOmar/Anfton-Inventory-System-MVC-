
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Category</h2>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form id="categoryform" method="post">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="Name">Name</label>
                                <input type="text" id="txtName" name="txtName" class="form-control" autocomplete="off" />
                            </div>
                            <div class="custom-control custom-checkbox mb-2">
                                <input type="checkbox" class="custom-control-input input-mini" id="closeButton" value="checked" />
                                <label class="custom-control-label" for="closeButton">Is Active</label>
                            </div>

                        </div>
                    </div>
                    <input type="hidden" id="txthidden" value="0" />
                    <button type="submit" id="btnSave" class="btn btn-primary mr-1 waves-effect waves-light">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title"> Category List</h4>
        <div id="dtTableDetail">
            <table id="tblCategory" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Active</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            var calling = 0;
            showCategory(calling);
            editOrDelete();
            $('#categoryform').validate({
            rules: {
               txtName: { required: true },
            },
            messages: {
                txtName:"Enter valid Name"
            },

            submitHandler: function (e) {
                var chk = 0;
                if ($('#closeButton:checkbox').prop('checked') == true) {
                    chk = 1;
                }
                var RequestCls = {
                    Name: $('#txtName').val(),
                    Active: chk,
                    Id: $('#txthidden').val()

                }
                var URLApi = '@Url.Content("~")' + "Master/AddCategory";
                $.ajax({
                    url: URLApi,
                    type: 'POST',
                    data: JSON.stringify(RequestCls),
                    async: false,
                    cache: false,
                    contentType: 'application/json;charset=utf-8',
                    success: function (data) {
                        alert(data.message);
                        showCategory(1);
                        $('#categoryform')[0].reset();
                        
                        $('txtHidden').val('0');
                    },
                    error: function (data) {
                        alert(data.messages);
                    }

                });
            }
            });

        });



        function showCategory(calling) {

            $("#tblCategory").DataTable({

                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "pageLength": 5,

                "ajax": {
                    "url":  '@Url.Content("~")' + "Master/GetCategory",
                    "type": "POST",
                    "Async": false,
                    
                    "datatype": "json",
                    cache: false
                },


                "columns": [
                    { "data": "Name", "name": "Name", "autoWidth": true },
                    {
                        "data": "Active", "name": "Active", "autoWidth": true, "render": function (value) {
                            if (value == 1) {
                                return '<span>Active</span>'
                            } else {
                                return '<span>In-Active</span>'
                            }
                        }
                    },
                    {
                        data:"Id","name":"Id","autowidth":true, "render": function (data, type, full, meta)
                        {
                            return '<a href="#" class="btn btn-info edit" href="#">Edit</a>' +
                                '<a href="#" class="btn btn-info delete text-danger" href="#">Delete</a>';
                        }
                    },



                ]

            });

            if (calling == 1) {
                $('#tblCategory').DataTable().ajax.reload();
                alert('called');
            }
        }

